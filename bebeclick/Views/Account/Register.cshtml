@model Bebeclick.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section AddToHead{
    <link href="http://yui.yahooapis.com/pure/0.4.2/pure-min.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/accountRegister.css")" rel="stylesheet" type="text/css" />
}

<div id="__register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "pure-form pure-form-stacked", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h1>Create a new account</h1>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <fieldset>
            @Html.LabelFor(m => m.FirstName, new { @class = "__control_label" })
            @Html.TextBoxFor(m => m.FirstName, new { id = "__name", required = "required" })
            @Html.LabelFor(m => m.Email, new { @class = "__control_label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "__email", required = "required" })
            @Html.LabelFor(m => m.Password, new { @class = "__control_label" })
            @Html.PasswordFor(m => m.Password, new { @class = "__password", required = "required" })
        </fieldset>
        <fieldset>
            @Html.LabelFor(m => m.LastName, new { @class = "__control_label" })
            @Html.TextBoxFor(m => m.LastName, new { id = "__last_name", required = "required" })
            @Html.LabelFor(m => m.BirthDate, new { @class = "__control_label" })
            @Html.TextBoxFor(m => m.BirthDate, new { id = "__birth_date", required = "required" })
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "__control_label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "__confirm_password", required = "required" })
        </fieldset>


        <input type="submit" class="btn btn-default" value="Register" />
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
