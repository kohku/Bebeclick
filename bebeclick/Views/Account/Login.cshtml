@using Bebeclick.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}

@section AddToHead{
    <link href="http://yui.yahooapis.com/pure/0.4.2/pure-min.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/accountLogin.css")" rel="stylesheet" type="text/css" />
}

<div id="__log_in">
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "pure-form pure-form-stacked", role = "form" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <h3>Iniciar Sesión</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { type = "email", placeholder = "someone@example.com" })
        @Html.ValidationMessageFor(m => m.Email, "")
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { type = "password", placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.Password, "")
        @Html.CheckBoxFor(m => m.RememberMe, new { id="__remember_me", @class = "pure-checkbox" })
        @Html.LabelFor(m => m.RememberMe, new { id = "__remember_label" })
        <input type="submit" value="Log in" class="pure-button pure-button-primary" />
    </fieldset>
    @Html.ActionLink("Register as a new user", "Register")
    @Html.ActionLink("Forgot your password?", "ForgotPassword")
}
</div>
<div id="__socialLoginForm">
    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}